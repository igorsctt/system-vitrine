<div class="admin-dashboard-container" style="max-width: 900px; margin: 40px auto; background: #fff; border-radius: 12px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); padding: 32px;">
  <h2 style="text-align:center; color:#4B2E83; margin-bottom:24px;">Produtos Cadastrados</h2>
  <div style="overflow-x:auto;">
    <table style="width:100%; border-collapse:collapse; min-width:600px;">
      <thead>
        <tr style="background:#f5f5f5;">
          <th style="padding:12px; text-align:left; color:#4B2E83;">Nome</th>
          <th style="padding:12px; text-align:left; color:#4B2E83;">Categoria</th>
          <th style="padding:12px; text-align:left; color:#4B2E83;">Descrição</th>
          <th style="padding:12px; text-align:center; color:#4B2E83;">Status</th>
          <th style="padding:12px; text-align:center; color:#4B2E83;">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr style="border-bottom:1px solid #eee;">
            <td style="padding:12px;"> <%= product.name %> </td>
            <td style="padding:12px;"> <%= product.category&.name %> </td>
            <td style="padding:12px;"> <%= truncate(product.description, length: 60) %> </td>
            <td style="padding:12px; text-align:center;">
              <% if product.active %>
                <span style="color:#2ecc40; font-weight:600;">Ativo</span>
              <% else %>
                <span style="color:#e74c3c; font-weight:600;">Inativo</span>
              <% end %>
            </td>
            <td style="padding:12px; text-align:center;">
              <div class="admin-actions" style="display:flex; flex-wrap:wrap; gap:8px; justify-content:center;">
                <%= link_to 'Editar', edit_admin_product_path(product), class: 'btn btn-sm', style: 'background:#4B2E83; color:#fff; min-width:90px; padding:6px 16px; border:none; border-radius:6px; font-weight:600; text-decoration:none; display:inline-block; text-align:center;' %>
                <%= link_to 'Excluir', admin_product_path(product), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm', style: 'background:#e74c3c; color:#fff; min-width:90px; padding:6px 16px; border:none; border-radius:6px; font-weight:600; text-decoration:none; display:inline-block; text-align:center;' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% if @products.empty? %>
    <p style="text-align:center; color:#888; margin-top:32px;">Nenhum produto cadastrado.</p>
  <% end %>
</div>

<style>
@media (max-width: 700px) {
  .admin-dashboard-container {
    padding: 8px !important;
  }
  .admin-actions {
    flex-direction: column !important;
    gap: 8px
  }
}
</style>
