<% content_for(:title, "Vitrine Leide - Produtos de Beleza") %>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4">Vitrine Leide</h1>
        <p class="lead mb-4">
          Descubra nossa seleção exclusiva de produtos de beleza. 
          Qualidade garantida e atendimento personalizado.
        </p>
        <%= link_to "Ver Produtos", products_path, class: "btn btn-light btn-lg" %>
      </div>
      <div class="col-lg-6 text-center">
        <i class="fas fa-gem fa-10x opacity-75"></i>
      </div>
    </div>
  </div>
</section>

<!-- Categories Section -->
<% if @categories.any? %>
  <section class="py-5">
    <div class="container">
      <h2 class="text-center mb-5">Categorias</h2>
      <div class="row">
        <% @categories.each do |category| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <div class="card-body text-center">
                <i class="fas fa-tag fa-3x text-primary mb-3"></i>
                <h5 class="card-title"><%= category.name %></h5>
                <p class="text-muted">
                  <%= pluralize(category.products.active.count, 'produto') %>
                </p>
                <%= link_to "Ver Produtos", products_path(category_id: category.id), 
                           class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Featured Products Section -->
<% if @featured_products.any? %>
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-5">Produtos em Destaque</h2>
      <div class="row">
        <% @featured_products.each do |product| %>
          <div class="col-md-4 mb-4">
            <div class="card product-card h-100 border-0 shadow-sm">
              <% if product.main_image.attached? %>
                <%= image_tag product.main_image, class: "card-img-top", 
                             style: "height: 250px; object-fit: cover;" %>
              <% else %>
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                     style="height: 250px;">
                  <i class="fas fa-image fa-3x text-muted"></i>
                </div>
              <% end %>
              
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text text-muted">
                  <%= truncate(product.description, length: 100) %>
                </p>
                <small class="text-muted">
                  <i class="fas fa-tag me-1"></i>
                  <%= product.category.name %>
                </small>
              </div>
              
              <div class="card-footer bg-transparent">
                <div class="d-grid">
                  <%= link_to product_path(product), class: "btn btn-primary" do %>
                    <i class="fas fa-eye me-2"></i>Ver Detalhes
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-4">
        <%= link_to "Ver Todos os Produtos", products_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </section>
<% end %>

<!-- WhatsApp Contact Section -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mb-4">Entre em Contato</h2>
        <p class="lead mb-4">
          Encontrou algo que te interessou? Entre em contato conosco pelo WhatsApp 
          e tire todas as suas dúvidas!
        </p>
        <%= link_to "https://wa.me/5511999999999?text=Olá! Gostaria de saber mais sobre os produtos.", 
                   target: "_blank", class: "btn btn-whatsapp btn-lg" do %>
          <i class="fab fa-whatsapp me-2"></i>Falar no WhatsApp
        <% end %>
      </div>
    </div>
  </div>
</section>
